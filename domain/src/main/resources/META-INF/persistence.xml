<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="domain" transaction-type="RESOURCE_LOCAL">
        <class>ch.bfh.wickedcoders.wickedboard.entities.Group</class>
        <class>ch.bfh.wickedcoders.wickedboard.entities.Label</class>
        <class>ch.bfh.wickedcoders.wickedboard.entities.Post</class>
        <class>ch.bfh.wickedcoders.wickedboard.entities.Topic</class>
        <class>ch.bfh.wickedcoders.wickedboard.entities.User</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:~/wickedBoardDB"/>
            <property name="javax.persistence.jdbc.user" value="bfh"/>
            <property name="javax.persistence.jdbc.password" value="bfh"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
        </properties>
    </persistence-unit>
</persistence>
